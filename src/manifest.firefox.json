{
  "manifest_version": 3,
  "name": "__MSG_nameFirefox__",
  "version": "0.1.0",
  "description": "__MSG_description__",
  "default_locale": "fa",
  "browser_specific_settings": {
    "gecko": {
      "id": "ai-writing-companion@amm1rr.com"
    }
  },
  "permissions": [
    "storage",
    "scripting",
    "clipboardWrite",
    "clipboardRead",
    "tabs",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "http://localhost:6969/*",
    "https://api.openai.com/*",
    "https://openrouter.ai/*",
    "https://translate.google.com/*"
  ],
  "background": {
    "scripts": ["background.bundle.js"]
  },
  "action": {
    "default_title": "__MSG_name__",
    "default_popup": "html/popup.html",
    "default_icon": "icons/extension_icon.png"
  },
  "icons": {
    "16": "icons/extension_icon.png",
    "24": "icons/extension_icon.png",
    "32": "icons/extension_icon.png",
    "64": "icons/extension_icon.png",
    "128": "icons/extension_icon.png",
    "256": "icons/extension_icon.png",
    "512": "icons/extension_icon.png"
  },
  "options_ui": {
    "page": "html/options.html",
    "open_in_tab": true
  },
  "content_scripts": [],
  "web_accessible_resources": [
    {
      "resources": [
        "browser-polyfill.js",
        "offscreen.js",
        "content.bundle.js",
        "offscreen.html",
        "styles/*",
        "icons/*",
        "html/*",
        "_locales/*"
      ],
      "matches": ["<all_urls>"],
      "use_dynamic_url": true
    }
  ]
}
